@using ASM_Auto.ViewModels.Administration.CreateProducts
@model CreateFoilViewModel

<section class="sectionLoginForm">
    <form class="accForm" method="post" enctype="multipart/form-data">
        <h2 class="formTitle">Добави Фолио</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="field">

            <input class="form-control " autocomplete="title" aria-required="true" asp-for="@Model.Title" placeholder="Загалвие на продукта" required/>
        </div>
        <div class="field">

            <input type="number" min="0.00" max="10000.00" step="0.01" class="form-control " autocomplete="price" aria-required="true" asp-for="@Model.Price" placeholder="Цена" required />
        </div>

        <div class="field">

            <input class="form-control " autocomplete="description" aria-required="true" asp-for="@Model.Description" placeholder="Описание" required />
        </div>

        <div class="field">

            <input class="form-control " autocomplete="line-description" aria-required="true" asp-for="@Model.LineDescription" placeholder="Описание-списък" />
        </div>
        <div class="field">
        <select asp-for="FoilType" class="form-control">
            <option value="" disabled selected hidden>Тип</option>
            @foreach (var type in Model.FoilsTypes)
            {
                <option value="@type.FoilTypeId">@type.FoilType</option>
            }

        </select>
        </div>

        <div class="field">
            <select asp-for="FoilColorId" class="form-control">
                    <option value="" disabled selected hidden>Цвят</option>
                @foreach (var color in Model.FoilsColors)
                {
                    <option value="@color.FoilColorId">@color.FoilColor</option>
                }
                </select>
        </div>

        <div class="field">
            <select asp-for="FoilPurposeId" class="form-control">
                <option value="" disabled selected hidden> Предназначение</option>
                @foreach (var purpose in Model.FoilsPurposes)
                {
                    <option value="@purpose.FoilPurposeId">@purpose.FoilPurpose</option>
                }
            </select>
        </div>

        <div class="field">
            <select asp-for="FreeDelivery" class="form-control">
                <option value="" disabled selected hidden>Доставка</option>

                <option value="true">Безплатна доставка</option>

            </select>
        </div>
        <br>
        <div class="field">
            <label for="upload">Избери изображения</label>
         <br>
         <br>
            <input id="upload" asp-for="@Model.Images" multiple accept="image/gif, image/jpeg, image/png">
        </div>

        <div class="text-center">
            <button type="submit" class="btn-primary">Създай</button>
        </div>
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}